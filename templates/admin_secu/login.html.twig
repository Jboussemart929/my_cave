{% extends 'base.html.twig' %}

{% block title %}{% endblock %}
{% block titre %}Se connecter{% endblock %}

{% block body %}

{% if error %}
   <div class="alert alert-danger"> Les informations sont incorrectes</div>
{% endif %}

<form action="{{path('connexion')}}" method="post">
    <div class="form">
    <label>Login : </label>
    <input type="text" require name="_username" class="form-control">
    </div>
    <div class="form-group">
    <label>Password : </label>
    <input type="password" require name="_password" class="form-control">
    </div>
    <input type="submit" class="btn btn-primary" value="s'identifier">
</form>

{% endblock %}
